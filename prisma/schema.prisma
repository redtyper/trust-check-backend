// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Hashowane hasło
  role      String   @default("USER") // USER, ADMIN
  createdAt DateTime @default(now())
  
  reports   Report[] // Jeden user, wiele zgłoszeń
}

model Company {
  nip           String        @id
  name          String
  statusVat     String
  trustScore    Int
  riskLevel     String
  rawData       Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  phones        PhoneNumber[]
  reports       Report[]
}

model PhoneNumber {
  number        String   @id
  countryCode   String
  trustScore    Int      @default(50)
  
  companyNip    String?
  company       Company? @relation(fields: [companyNip], references: [nip])

  reports       Report[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Person {
  id        Int       @id @default(autoincrement())
  name      String    // "Justyna", "HK MANGEME", itd.
  email     String?
  phone     String?
  bankAccount String?
  trustScore Int      @default(50)
  riskLevel String    @default("Nieznany")
  reports   Report[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Report {
  id                Int       @id @default(autoincrement())
  userId            Int
  user              User      @relation(fields: [userId], references: [id], onDelete: Restrict)
  
  companyNip        String?
  company           Company?  @relation(fields: [companyNip], references: [nip], onDelete: SetNull)
  
  phoneNumber       String?
  phone             PhoneNumber? @relation(fields: [phoneNumber], references: [number], onDelete: SetNull)
  
  personId          Int?               // NOWE
  person            Person?  @relation(fields: [personId], references: [id], onDelete: SetNull) // NOWE
  
  rating            Int
  reason            String
  comment           String?
  ipAddress         String?
  
  reportedEmail     String?
  facebookLink      String?
  screenshotUrl     String?   // Oryginał z FB (opcjonalnie)
  screenshotPath    String?   // NOWE - ścieżka lokalnego pliku
  
  scammerName       String?
  bankAccount       String?
  
  isAutoGenerated   Boolean   @default(false)
  sourceUrl         String?
  
  createdAt         DateTime  @default(now())
}