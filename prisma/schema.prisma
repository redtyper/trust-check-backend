// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Hashowane hasło
  role      String   @default("USER") // USER, ADMIN
  createdAt DateTime @default(now())
  
  reports   Report[] // Jeden user, wiele zgłoszeń
}

model Company {
  nip           String        @id
  name          String
  statusVat     String
  trustScore    Int
  riskLevel     String
  rawData       Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  phones        PhoneNumber[]
  reports       Report[]
}

model PhoneNumber {
  number        String   @id
  countryCode   String
  trustScore    Int      @default(50)
  
  companyNip    String?
  company       Company? @relation(fields: [companyNip], references: [nip])

  reports       Report[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Report {
  id          Int      @id @default(autoincrement())
  
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  companyNip  String?
  company     Company? @relation(fields: [companyNip], references: [nip])
  
  phoneNumber String?
  phone       PhoneNumber? @relation(fields: [phoneNumber], references: [number])

  rating      Int
  reason      String
  comment     String?
  ipAddress   String?
  
  // === NOWE POLA (Dla zgłoszeń osób prywatnych) ===
  reportedEmail     String?  // Email oszusta
  facebookLink      String?  // Link do profilu FB/OLX
  screenshotUrl     String?  // Link do dowodu (np. imgur)
  // ================================================

  createdAt   DateTime @default(now())
}